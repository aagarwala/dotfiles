[user]
	name = Nikita Kouevda
	email = nkouevda@gmail.com

[diff]
	algorithm = patience
	tool = vimdiff

[grep]
	lineNumber = true

[branch]
	autosetuprebase = always

[fetch]
	prune = true

[push]
	default = upstream

[alias]
	st = status -s
	sta = status
	br = branch
	ci = commit
	co = checkout
	rmc = rm --cached
	df = diff
	dfv = difftool --no-prompt
	dfc = diff --cached
	dfcv = difftool --cached --no-prompt
	lgd = log --graph --decorate --oneline --date-order
	lgds = log --graph --decorate --oneline --date-order\
	--simplify-by-decoration --all
