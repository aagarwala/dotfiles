# Nikita Kouevda
# 2014/05/02

# Update Homebrew itself and get the newest formulae
update

# Upgrade all installed formulae
upgrade

# Install everything
install bash
install coreutils
install findutils --default-names
install flac
install git
install gnu-sed --default-names
install macvim
install mercurial
install nmap
install node
install python
install python3
install tig
install tree
install valgrind
install vim
install wget

# Override the system openssl
link --force openssl

# Link all OS X applications
linkapps

# Remove old versions and clear the cache
cleanup -s
